@import "../../components/workDialog/workDialog.wxss";

.editResumeStyle {
    /*  height is defined in inline style, windowHeight */
    width: 100%;
}
.swiperStyle {
    width: 100%;  
    height: 100%;
}

.infoCardStyle {
    height: 100%;
    width: 100%;
    overflow-y: auto;
}

.infoCardStyle .buttonStyle {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    box-shadow: 10rpx 10rpx 10rpx #989898;
    text-shadow: 0 0 10rpx #989898;
    color: #2F2F2F;
    margin-top: 30rpx;
    margin-bottom: 100rpx;
    border: 1px solid #ABABAB;
    background: #fff;
}

.baseInfoCard {
    font-size: 30rpx;
    text-align: center;
}
.baseInfoCard view {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 1px solid gray;
    border-radius: 10rpx;
    margin: 10px;
    padding: 10rpx;
}
.baseInfoCard view text:nth-child(1){
    /* background: blueviolet; */
    border-bottom: 1px solid gray;
    padding-bottom: 10rpx;
    font-weight: 700;
}
.baseInfoCard view input:nth-child(2), .baseInfoCard view picker:nth-child(2) {
    width: 100%;
}
.baseInfoCard view .radioGroupStyle radio .wx-radio-input{
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
 }
 /* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
 .baseInfoCard view .radioGroupStyle radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 25rpx;
    height: 25rpx;
    line-height: 25rpx;
    text-align: center;
    font-size:20rpx;
    color:#fff;
 }

.textInputStyle {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-flow: nowrap;
}
.textInputStyle text {
}
.textInputStyle input {
}

.otherInfoCard view {
    border: 1px solid gray;
    margin: 10px;
    display: flex;
    border-radius: 10rpx;
}
.otherInfoCard input:nth-child(1) {
    width: 100px;
    height: 100%;
    padding-right: 5px;
    border-right: 1px solid gray;
}
.otherInfoCard .viewContentStyle {
    background: aquamarine;
    height: 100%;
    min-height: 20rpx;
    padding-left: 5rpx;
    flex: 1;
    word-break:break-all
}
.formAreaStyle textarea {
    min-height: 200rpx;
    width: 90%;
    font-size: 35rpx;
    padding: 10rpx;
    margin: 3%;
    /* margin: 5%; */
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 10rpx #989898;
    border: 1px solid #ABABAB;
}
.formAreaStyle .bottonStyle button {
    box-shadow: 0rpx 0rpx 10rpx #989898;
}

.deleteWorkCard { /* must have width and height, it's used to delete card */
    background: #fff;
    border-radius: 30px;
    width: 30px;
    height: 30px;
    font-size: 12px;
}
